{
  "image": "mcr.microsoft.com/devcontainers/base:jammy",
  "containerEnv": {
    "PROJECT_DIR": "${containerWorkspaceFolder}"
  },
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/stdcout1/ihp-feature/ihp:latest": {}
  },
  "onCreateCommand": [
    "Setup direnv": "sudo apt install direnv; echo 'eval \"$(direnv hook bash)\"' >> ~/.bashrc",
    "Fix nix Permissions": "sudo apt install acl; sudo setfacl -k /tmp",
  ],
  "customizations": {
    "vscode": {
      "settings": {
          "terminal.integrated.profiles.linux": {
              "bash": {
                  "path": "/bin/bash"
              }
          },
          "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "bbenoist.nix",
        "haskell.haskell",
        "s0kil.vscode-hsx",
        "mkhl.direnv",
        "vigoo.stylish-haskell"
      ]
    }
  }
}
